<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.tastymeals"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		android:name="com.example.tastymeals.App">

		<!-- Activities -->
		<activity
			android:name="com.example.tastymeals.ui.categories.CategoriesActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name="com.example.tastymeals.ui.recipes.RecipesActivity"/>
		<activity android:name="com.example.tastymeals.ui.recipedetail.RecipeDetailActivity"/>

	</application>

</manifest>
